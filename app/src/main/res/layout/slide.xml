<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@color/white"
        android:id="@+id/icon"

        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/profile"
            android:padding="30dp"
            android:id="@+id/image"
            />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/below_area"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/icon"
        android:background="@drawable/round3"
        android:backgroundTint="@color/white"
        android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="Heading"
     android:textColor="@color/blue_t"
        android:textSize="30dp"
        android:id="@+id/heading"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:lineSpacingExtra="10dp"
        android:paddingStart="30dp"
        android:gravity="center"
        android:lineSpacingMultiplier="0.6"
        android:paddingEnd="30dp"
        android:text="blah blah blah just a example text d svjk rfv fdv fffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffffff"
        android:fontFamily="@font/poppinsmediumitalic"
        android:id="@+id/description"
        android:textSize="15dp" />


    <LinearLayout
        android:id="@+id/dots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>
    </LinearLayout>

</RelativeLayout>